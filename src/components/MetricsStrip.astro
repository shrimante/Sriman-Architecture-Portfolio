---
import { siteConfig } from '../config/site';
---

<section id="impact" class="bg-secondary/30 border-y border-white/5 py-12">
  <div class="container mx-auto px-6">
    <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-6 gap-8">
      {siteConfig.metrics.map(metric => (
        <div class="text-center group">
          <div class="text-2xl md:text-3xl font-bold text-white mb-2 group-hover:text-accent transition-colors">
            {metric.value}
          </div>
          <div class="text-[10px] uppercase tracking-widest text-slate-500 font-bold">
            {metric.label}
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

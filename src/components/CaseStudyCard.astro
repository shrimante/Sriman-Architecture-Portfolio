---
interface Props {
  id: string;
  title: string;
  teaser: string;
  image?: string;
}

const { id, title, teaser, image } = Astro.props;
---

<a href={`/case-studies/${id}`} class="group group/card relative flex flex-col h-full bg-white border border-slate-200 rounded-3xl overflow-hidden hover:border-accent/40 hover:shadow-lg transition-all duration-500">
  <div class="aspect-[16/10] bg-slate-100 overflow-hidden border-b border-slate-100">
    <!-- Placeholder for project images -->
    <div class="w-full h-full bg-gradient-to-br from-slate-100 to-slate-200 flex items-center justify-center text-slate-400">
      <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1" stroke-linecap="round" stroke-linejoin="round" class="opacity-20"><rect x="3" y="3" width="18" height="18" rx="2" ry="2"></rect><circle cx="8.5" cy="8.5" r="1.5"></circle><polyline points="21 15 16 10 5 21"></polyline></svg>
    </div>
  </div>
  
  <div class="p-8 flex-grow flex flex-col">
    <div class="text-[10px] uppercase tracking-[0.2em] font-bold text-accent mb-4">MuleSoft Case Study</div>
    <h3 class="text-2xl font-bold text-slate-900 mb-4 group-hover/card:text-accent transition-colors leading-tight">{title}</h3>
    <p class="text-slate-600 text-sm mb-8 flex-grow leading-relaxed">{teaser}</p>
    
    <div class="flex items-center gap-3 text-slate-900 text-[10px] uppercase font-bold tracking-[0.15em] group-hover/card:text-accent transition-colors">
      Read Case Study
      <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round" class="group-hover/card:translate-x-1 transition-transform"><line x1="5" y1="12" x2="19" y2="12"></line><polyline points="12 5 19 12 12 19"></polyline></svg>
    </div>
  </div>
</a>

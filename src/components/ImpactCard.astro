  dollarSign: `<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><line x1="12" y1="1" x2="12" y2="23"></line><path d="M17 5H9.5a3.5 3.5 0 0 0 0 7h5a3.5 3.5 0 0 1 0 7H6"></path></svg>`
};
---

<div class="glass p-8 rounded-3xl group hover:border-accent/30 transition-all">
  <div class="w-12 h-12 bg-accent/10 rounded-2xl flex items-center justify-center text-accent mb-6 group-hover:scale-110 transition-transform duration-500">
    <Fragment set:html={icons[icon] || icons['layers']} />
  </div>
  <h3 class="text-xl font-bold text-white mb-4 group-hover:text-accent transition-colors">{title}</h3>
  <p class="text-slate-400 leading-relaxed text-sm">{description}</p>
</div>

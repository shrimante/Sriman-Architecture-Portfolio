---
const artifacts = [
  { label: "Hybrid RTF Architecture", type: "OpenShift / F5", link: "/diagrams/hybrid-rtf", image: "/images/gallery_thumbnail_1.png" },
  { label: "MuleSoft Security Model", type: "OAuth2 / RBAC", link: "/diagrams/mulesoft-security-model", image: "/images/gallery_thumbnail_2.png" },
  { label: "Solace Event Topology", type: "Pub-Sub Design", link: "/diagrams/solace-event-topology", image: "/images/gallery_thumbnail_3.png" },
  { label: "API Lifecycle Blueprint", type: "Anypoint Model", link: "/diagrams/api-lifecycle-blueprint", image: "/images/gallery_thumbnail_4.png" }
];
---

<section class="py-24">
  <div class="container mx-auto px-6">
    <div class="flex flex-col md:flex-row md:items-end justify-between mb-16 gap-6">
      <div>
        <h2 class="text-3xl md:text-5xl font-bold text-slate-900 mb-6 tracking-tighter">Architecture Artifacts</h2>
        <p class="text-slate-600 max-w-xl">Deep-dive technical diagrams illustrating platform governance, reliability strategies, and ecosystem topology.</p>
      </div>
      <div class="text-slate-500 text-[10px] uppercase font-bold tracking-widest border-b border-slate-200 pb-2">
        4 Exclusive Blueprints
      </div>
    </div>

    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
      {artifacts.map((art, i) => (
        <a href={art.link || "#"} class={`group ${art.link ? 'cursor-pointer' : 'cursor-default opacity-50'}`}>
          <div class={`aspect-square bg-slate-100 border border-slate-200 rounded-2xl mb-6 overflow-hidden flex items-center justify-center transition-all duration-500 relative ${art.link ? 'group-hover:border-accent/40 group-hover:shadow-sm' : ''}`}>
             {art.image ? (
                <>
                   <img src={art.image} alt={art.label} class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-700" loading="lazy" />
                   <div class="absolute inset-0 bg-slate-900/10 opacity-0 group-hover:opacity-100 transition-opacity flex items-center justify-center">
                     <span class="bg-white/90 text-slate-900 px-4 py-2 rounded-full text-[10px] font-bold uppercase tracking-widest shadow-sm">
                       {art.link ? 'Click to View' : 'Coming Soon'}
                     </span>
                   </div>
                </>
             ) : (
                <div class="p-8 text-center">
                  <svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1" stroke-linecap="round" stroke-linejoin="round" class={`mb-4 mx-auto transition-colors ${art.link ? 'text-slate-400 group-hover:text-accent' : 'text-slate-300'}`}><rect x="3" y="3" width="18" height="18" rx="2" ry="2"></rect><line x1="3" y1="9" x2="21" y2="9"></line><line x1="9" y1="21" x2="9" y2="9"></line></svg>
                  <div class={`text-[10px] font-bold uppercase tracking-widest ${art.link ? 'text-slate-500 group-hover:text-slate-700' : 'text-slate-400'}`}>
                    {art.link ? 'Click to View' : 'Coming Soon'}
                  </div>
                </div>
             )}
          </div>
          <h4 class={`font-bold mb-1 transition-colors ${art.link ? 'text-slate-900 group-hover:text-accent' : 'text-slate-400'}`}>{art.label}</h4>
          <p class={`text-[10px] uppercase tracking-widest font-bold ${art.link ? 'text-slate-500' : 'text-slate-400'}`}>{art.type}</p>
        </a>
      ))}
    </div>
  </div>
</section>

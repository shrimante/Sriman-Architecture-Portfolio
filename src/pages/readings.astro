---
import { getCollection } from 'astro:content';
import BaseLayout from '../layouts/BaseLayout.astro';

const readings = await getCollection('readings');
---

<BaseLayout title="Readings | Sriman Tirupathy Eshwarappa">
	<section class="container mx-auto px-6 py-24">
		<h1 class="text-4xl font-bold text-white mb-4">Technical Library</h1>
		<p class="text-slate-400 mb-12 max-w-2xl">A curated list of books and whitepapers that have shaped my architectural philosophy and engineering leadership.</p>

		<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
			{readings.map(book => (
				<div class="bg-white/5 border border-white/10 p-8 rounded-2xl hover:border-accent/30 transition-all flex flex-col justify-between">
					<div>
						<span class="text-[10px] uppercase tracking-widest font-bold text-slate-500 mb-4 block">{book.data.category}</span>
						<h2 class="text-xl font-bold text-white mb-2">{book.data.title}</h2>
						<p class="text-slate-500 text-sm mb-6">by {book.data.author}</p>
					</div>
					<div class="flex items-center justify-between mt-4">
						<span class={`text-[10px] font-bold uppercase tracking-wider px-2 py-1 rounded-md border ${book.data.status === 'Read' ? 'bg-green-500/10 text-green-400 border-green-500/20' : 'bg-accent/10 text-accent border-accent/20'}`}>
							{book.data.status}
						</span>
						<div class="flex gap-1">
							{[...Array(5)].map((_, i) => (
								<div class={`w-2 h-2 rounded-full ${i < (book.data.rating || 0) ? 'bg-accent' : 'bg-white/10'}`}></div>
							))}
						</div>
					</div>
				</div>
			))}
		</div>
	</section>
</BaseLayout>

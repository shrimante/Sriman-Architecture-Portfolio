---
import { getCollection } from 'astro:content';
import BaseLayout from '../layouts/BaseLayout.astro';

const readings = await getCollection('readings');
---

<BaseLayout title="Readings | Sriman Tirupathy Eshwarappa">
	<section class="container mx-auto px-6 py-24 max-w-4xl">
		<h1 class="text-4xl font-bold text-white mb-12">Architectural <span class="text-gradient">Readings</span></h1>
		
		<div class="space-y-8">
			{readings.map(reading => (
				<div class="glass p-10 rounded-3xl border border-white/5 group hover:border-accent/20 transition-all">
					<div class="flex justify-between items-start mb-4">
						<h3 class="text-2xl font-bold text-white group-hover:text-accent transition-colors italic leading-snug tracking-tight pr-8">
							"{reading.data.title}"
						</h3>
						<span class="text-[10px] font-black text-slate-600 uppercase tracking-widest bg-white/5 px-3 py-1 rounded">
							{reading.data.category}
						</span>
							))}
						</div>
					</div>
				</div>
			))}
		</div>
	</section>
</BaseLayout>

---
import BaseLayout from '../layouts/BaseLayout.astro';
import { siteConfig } from '../config/site';

const accelerators = siteConfig.accelerators.map(a => ({
  ...a,
  githubUrl: `https://github.com/shrimante/${a.repo}`,
  status: "Active" // Setting to active as per request to list them
}));
---

<BaseLayout title="Engineering Accelerators | Sriman Tirupathy Eshwarappa">
  <div class="pt-32 pb-24 min-h-screen bg-slate-50 relative overflow-hidden">
    <!-- Background Accents -->
    <div class="absolute top-0 right-0 w-[500px] h-[500px] bg-accent/5 rounded-full blur-[100px] opacity-70 pointer-events-none"></div>
    <div class="absolute bottom-0 left-0 w-[600px] h-[600px] bg-blue-100/20 rounded-full blur-[120px] opacity-50 pointer-events-none"></div>

    <div class="container mx-auto px-6 max-w-5xl relative z-10">
      
      <div class="mb-16">
        <a href="/" class="inline-flex items-center gap-2 text-accent text-[10px] uppercase font-bold tracking-widest mb-12 hover:translate-x-[-4px] transition-transform">
          <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round"><line x1="19" y1="12" x2="5" y2="12"></line><polyline points="12 19 5 12 12 5"></polyline></svg>
          Back to Home
        </a>
        
        <header class="mb-12">
          <div class="text-[10px] uppercase tracking-[0.2em] font-bold text-accent mb-6 flex items-center gap-2">
            <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round"><path d="M14.5 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V7.5L14.5 2z"></path><polyline points="14 2 14 8 20 8"></polyline><line x1="16" y1="13" x2="8" y2="13"></line><line x1="16" y1="17" x2="8" y2="17"></line><line x1="10" y1="9" x2="8" y2="9"></line></svg>
            Open Source
          </div>
          <h1 class="text-4xl md:text-6xl font-bold text-slate-900 mb-6 leading-tight tracking-tighter">Engineering Accelerators</h1>
          <p class="text-xl text-slate-600 leading-relaxed max-w-3xl">
            A curated collection of tools, templates, and boilerplates designed to automate integration delivery, enforce architectural governance, and eliminate redundant engineering effort across the enterprise.
          </p>
        </header>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        {accelerators.map((accelerator) => (
          <div class="glass p-8 rounded-2xl border border-slate-200 bg-white/60 hover:bg-white transition-all shadow-sm hover:shadow-md flex flex-col h-full group">
            <div class="flex justify-between items-start mb-6">
              <div class="p-3 rounded-xl bg-accent/10 text-accent group-hover:scale-110 group-hover:bg-accent group-hover:text-white transition-all duration-300">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <path d="M15 22v-4a4.8 4.8 0 0 0-1-3.5c3 0 6-2 6-5.5.08-1.25-.27-2.48-1-3.5.28-1.15.28-2.35 0-3.5 0 0-1 0-3 1.5-2.64-.5-5.36-.5-8 0C6 2 5 2 5 2c-.3 1.15-.3 2.35 0 3.5A5.403 5.403 0 0 0 4 9c0 3.5 3 5.5 6 5.5-.39.49-.68 1.05-.85 1.65-.17.6-.22 1.23-.15 1.85v4"></path>
                  <path d="M9 18c-4.51 2-5-2-7-2"></path>
                </svg>
              </div>
              {accelerator.status === "Active" ? (
                <span class="inline-flex items-center gap-1.5 px-3 py-1 rounded-full text-[10px] font-bold uppercase tracking-widest bg-emerald-100 text-emerald-700 border border-emerald-200">
                  <span class="w-1.5 h-1.5 rounded-full bg-emerald-500 animate-pulse"></span>
                  Active
                </span>
              ) : (
                <span class="inline-flex items-center gap-1.5 px-3 py-1 rounded-full text-[10px] font-bold uppercase tracking-widest bg-slate-100 text-slate-500 border border-slate-200">
                  WIP
                </span>
              )}
            </div>
            
            <h3 class="text-2xl font-bold text-slate-900 mb-4 tracking-tight group-hover:text-accent transition-colors">{accelerator.title}</h3>
            
            <p class="text-slate-600 leading-relaxed mb-6">
              {accelerator.description}
            </p>

            <div class="mb-8 p-4 bg-accent/5 rounded-xl border border-accent/10">
              <div class="text-[9px] uppercase font-extrabold tracking-widest text-accent mb-2">Why This Matters</div>
              <p class="text-slate-700 text-sm leading-snug italic">"{accelerator.impact}"</p>
            </div>
            
            <div class="mt-auto">
              <div class="flex flex-wrap gap-2 mb-8">
                {accelerator.tags.map((tag) => (
                  <span class="px-3 py-1 bg-slate-100 text-slate-600 text-[10px] uppercase font-bold tracking-widest rounded-md border border-slate-200">
                    {tag}
                  </span>
                ))}
              </div>
              
              <a 
                href={accelerator.githubUrl}
                target="_blank"
                rel="noopener noreferrer"
                class={`inline-flex items-center gap-2 px-5 py-2.5 rounded-lg text-xs uppercase font-bold tracking-widest transition-all ${
                  accelerator.githubUrl !== "#" 
                    ? "bg-slate-900 text-white hover:bg-accent hover:shadow-lg" 
                    : "bg-slate-100 text-slate-400 cursor-not-allowed border border-slate-200"
                }`}
              >
                {accelerator.githubUrl !== "#" ? "View Repository" : "Repository Pending"}
                <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round" class={accelerator.githubUrl !== "#" ? "group-hover:translate-x-1 transition-transform" : ""}><path d="M5 12h14"></path><path d="m12 5 7 7-7 7"></path></svg>
              </a>
            </div>
          </div>
        ))}
      </div>
      
    </div>
  </div>
</BaseLayout>

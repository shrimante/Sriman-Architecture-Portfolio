---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { siteConfig } from '../../config/site';

const title = "Hybrid MuleSoft Platform: RTF on OpenShift";
const teaser = "This reference architecture describes a true hybrid MuleSoft runtime deployed across CloudHub 2.0 and Runtime Fabric (RTF) on OpenShift hosted in the client datacenter, with F5 providing centralized routing, ingress control, and traffic steering between runtime planes. The platform is designed with environment parity across non-production (DEV/TST/STG) and production resilience (PRD/DR).";

const diagram = `graph TD
    Client[External Clients / Mobile / Web] --> F5[F5 Big-IP Load Balancer]
    
    subgraph ControlPlane[MuleSoft Anypoint Platform]
        API_Manager[API Manager]
        Runtime_Manager[Runtime Manager]
    end

    subgraph AWS[AWS Region - CloudHub 2.0]
        CH2_Ingress[CloudHub 2.0 Ingress]
        Exp_API[Experience APIs]
        Sys_API_CH[External System APIs]
        CH2_Ingress --> Exp_API
        Exp_API --> Sys_API_CH
    end

    subgraph OnPrem[On-Premise Data Center]
        OpenShift[Red Hat OpenShift Cluster]
        subgraph RTF[Runtime Fabric]
            RTF_Ingress[RTF Ingress Controller]
            Process_API[Process / Orchestration APIs]
            Sys_API_OP[Internal System APIs]
            RTF_Ingress --> Process_API
            Process_API --> Sys_API_OP
        end
        Backends[(Legacy DB / ERP / Mainframe)]
        Sys_API_OP --> Backends
    end

    F5 -->|External Traffic| CH2_Ingress
    F5 -->|Internal/Secure Traffic| RTF_Ingress
    
    Sys_API_CH -.->|VPN/Direct Connect| RTF_Ingress
    
    ControlPlane -.->|Management| Exp_API
    ControlPlane -.->|Management| Process_API
    ControlPlane -.->|Management| Sys_API_CH
    ControlPlane -.->|Management| Sys_API_OP

    classDef aws fill:#fff7ed,stroke:#f97316,stroke-width:2px,color:#c2410c;
    classDef onprem fill:#fef2f2,stroke:#ef4444,stroke-width:2px,color:#b91c1c;
    classDef control fill:#eff6ff,stroke:#3b82f6,stroke-width:2px,color:#1d4ed8;
    classDef lb fill:#f0fdf4,stroke:#22c55e,stroke-width:2px,color:#15803d;
    
    class AWS aws;
    class OnPrem onprem;
    class ControlPlane control;
    class F5 lb;`;
---

<BaseLayout title={`${title} | Sriman Tirupathy Eshwarappa`}>
  <article class="pt-32 pb-24">
    <div class="container mx-auto px-6 max-w-4xl">
      <a href="/#case-studies" class="inline-flex items-center gap-2 text-accent text-[10px] uppercase font-bold tracking-widest mb-12 hover:translate-x-[-4px] transition-transform">
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round"><line x1="19" y1="12" x2="5" y2="12"></line><polyline points="12 19 5 12 12 5"></polyline></svg>
        Back to Case Studies
      </a>

      <header class="mb-20">
        <div class="text-[10px] uppercase tracking-[0.2em] font-bold text-accent mb-6">Reference Architecture</div>
        <h1 class="text-4xl md:text-6xl font-bold text-slate-900 mb-8 leading-tight tracking-tighter">{title}</h1>
        <p class="text-xl text-slate-600 leading-relaxed font-outfit">{teaser}</p>
      </header>

      <div class="space-y-20">
        <!-- Diagram Section -->
        <section>
          <div class="bg-white border border-slate-200 rounded-2xl p-8 overflow-x-auto diagram-container shadow-sm mb-12">
            <div class="mermaid min-w-[800px] flex justify-center">
              {diagram}
            </div>
          </div>
        </section>

        <!-- Styled Content Sections -->
        <div class="max-w-[900px] mx-auto px-4 md:px-8 pb-32">
          <div class="flex flex-col gap-16">
            
            <!-- Section 1 -->
            <section>
              <div class="flex items-center gap-4 mb-8">
                <div class="w-10 h-10 rounded-full bg-accent/10 flex items-center justify-center text-accent font-bold text-xl">1</div>
                <h2 class="text-3xl font-bold text-slate-900 tracking-tighter">Architectural Principles</h2>
              </div>
              <div class="glass p-8 md:p-10">
                <ul class="space-y-6">
                  <li class="flex gap-4">
                    <div class="mt-1 text-accent flex-shrink-0">
                      <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round"><polyline points="20 6 9 17 4 12"></polyline></svg>
                    </div>
                    <div>
                      <strong class="text-slate-900 block mb-1">Hybrid by design (runtime placement):</strong>
                      <span class="text-slate-600 leading-relaxed text-lg block">Workloads are placed on CloudHub 2.0 or on-prem RTF based on connectivity, compliance, latency, and operational constraints—without compromising consistency in governance, security, and observability.</span>
                    </div>
                  </li>
                  <li class="flex gap-4">
                    <div class="mt-1 text-accent flex-shrink-0">
                      <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round"><polyline points="20 6 9 17 4 12"></polyline></svg>
                    </div>
                    <div>
                      <strong class="text-slate-900 block mb-1">Centralized traffic control:</strong>
                      <span class="text-slate-600 leading-relaxed text-lg block">All inbound routing is governed through an enterprise ingress layer (F5) to enforce consistent patterns for exposure, TLS posture, and traffic steering across runtime planes.</span>
                    </div>
                  </li>
                  <li class="flex gap-4">
                    <div class="mt-1 text-accent flex-shrink-0">
                      <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round"><polyline points="20 6 9 17 4 12"></polyline></svg>
                    </div>
                    <div>
                      <strong class="text-slate-900 block mb-1">Environment parity:</strong>
                      <span class="text-slate-600 leading-relaxed text-lg block">Non-production mirrors production topology, including routing paths and runtime splits, to prevent production-only failures arising from untested hybrid behavior.</span>
                    </div>
                  </li>
                  <li class="flex gap-4">
                    <div class="mt-1 text-accent flex-shrink-0">
                      <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round"><polyline points="20 6 9 17 4 12"></polyline></svg>
                    </div>
                    <div>
                      <strong class="text-slate-900 block mb-1">Operational readiness:</strong>
                      <span class="text-slate-600 leading-relaxed text-lg block">Observability, incident response, and DR runbooks are treated as first-class deliverables and implemented alongside platform build-out.</span>
                    </div>
                  </li>
                </ul>
              </div>
            </section>

            <!-- Section 2 -->
            <section>
              <div class="flex items-center gap-4 mb-8">
                <div class="w-10 h-10 rounded-full bg-accent/10 flex items-center justify-center text-accent font-bold text-xl">2</div>
                <h2 class="text-3xl font-bold text-slate-900 tracking-tighter">Networking Model</h2>
              </div>

              <div class="border-l-2 border-accent/20 pl-6 mb-10">
                <h3 class="text-xl font-bold text-slate-900 mb-4">2.1 Network Segmentation & Zones</h3>
                <p class="text-slate-600 leading-relaxed mb-6 text-lg">The architecture aligns with a zone-based model commonly adopted in enterprise environments:</p>
                <ul class="space-y-4">
                  <li class="flex gap-3">
                    <div class="mt-1.5 text-slate-400 flex-shrink-0"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="9 18 15 12 9 6"></polyline></svg></div>
                    <div class="text-slate-600 text-lg"><strong class="text-slate-900">Ingress Zone:</strong> External and internal entry points controlled through F5 (VIPs, L7 routing, policy enforcement).</div>
                  </li>
                  <li class="flex gap-3">
                    <div class="mt-1.5 text-slate-400 flex-shrink-0"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="9 18 15 12 9 6"></polyline></svg></div>
                    <div class="text-slate-600 text-lg">
                      <strong class="text-slate-900 block mb-2">Runtime Zones:</strong>
                      <ul class="space-y-2 pl-4">
                        <li class="flex items-center gap-2"><div class="w-1.5 h-1.5 rounded-full bg-slate-400"></div>CloudHub 2.0 runtime plane for suitable API and integration workloads.</li>
                        <li class="flex items-center gap-2"><div class="w-1.5 h-1.5 rounded-full bg-slate-400"></div>On-prem RTF runtime plane running in the client datacenter on OpenShift for workloads requiring datacenter locality or stricter controls.</li>
                      </ul>
                    </div>
                  </li>
                  <li class="flex gap-3">
                    <div class="mt-1.5 text-slate-400 flex-shrink-0"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="9 18 15 12 9 6"></polyline></svg></div>
                    <div class="text-slate-600 text-lg"><strong class="text-slate-900">Backend/System Zone:</strong> Enterprise applications, databases, and services accessed via controlled routes and allowlists.</div>
                  </li>
                </ul>
                <p class="text-slate-600 leading-relaxed mt-6 text-lg">This structure enables controlled east-west and north-south connectivity while preserving isolation between environments (DEV/TST/STG vs PRD/DR).</p>
              </div>

              <div class="border-l-2 border-accent/20 pl-6 mb-10">
                <h3 class="text-xl font-bold text-slate-900 mb-4">2.2 Traffic Steering (CloudHub 2.0 vs On-Prem RTF)</h3>
                <p class="text-slate-600 leading-relaxed mb-6 text-lg">Traffic is routed to the appropriate runtime plane based on application ownership and exposure model:</p>
                <ul class="space-y-4">
                  <li class="flex gap-3">
                    <div class="mt-1.5 text-slate-400 flex-shrink-0"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="9 18 15 12 9 6"></polyline></svg></div>
                    <div class="text-slate-600 text-lg">F5 routes API traffic to CloudHub 2.0 or on-prem RTF based on hostname/path rules (or equivalent routing policies).</div>
                  </li>
                  <li class="flex gap-3">
                    <div class="mt-1.5 text-slate-400 flex-shrink-0"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="9 18 15 12 9 6"></polyline></svg></div>
                    <div class="text-slate-600 text-lg">Runtime plane selection is explicit and governed; services are not moved between planes without change control.</div>
                  </li>
                </ul>
              </div>

              <div class="border-l-2 border-accent/20 pl-6 mb-10">
                <h3 class="text-xl font-bold text-slate-900 mb-4">2.3 Connectivity to Enterprise Backends</h3>
                <p class="text-slate-600 leading-relaxed mb-6 text-lg">Integrations that require on-prem connectivity follow controlled patterns:</p>
                <ul class="space-y-4">
                  <li class="flex gap-3">
                    <div class="mt-1.5 text-slate-400 flex-shrink-0"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="9 18 15 12 9 6"></polyline></svg></div>
                    <div class="text-slate-600 text-lg">On-prem RTF accesses datacenter systems directly within allowed security boundaries.</div>
                  </li>
                  <li class="flex gap-3">
                    <div class="mt-1.5 text-slate-400 flex-shrink-0"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="9 18 15 12 9 6"></polyline></svg></div>
                    <div class="text-slate-600 text-lg">CloudHub 2.0 accesses enterprise systems through approved connectivity patterns and enterprise network controls, ensuring all access paths remain auditable and governed.</div>
                  </li>
                </ul>
              </div>

              <div class="border-l-2 border-accent/20 pl-6">
                <h3 class="text-xl font-bold text-slate-900 mb-4">2.4 Resilience and Failure Domains</h3>
                <p class="text-slate-600 leading-relaxed mb-6 text-lg">The platform is designed to isolate failures:</p>
                <ul class="space-y-4">
                  <li class="flex gap-3">
                    <div class="mt-1.5 text-slate-400 flex-shrink-0"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="9 18 15 12 9 6"></polyline></svg></div>
                    <div class="text-slate-600 text-lg">CloudHub 2.0 runtime incidents do not directly impair on-prem RTF services and vice-versa.</div>
                  </li>
                  <li class="flex gap-3">
                    <div class="mt-1.5 text-slate-400 flex-shrink-0"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="9 18 15 12 9 6"></polyline></svg></div>
                    <div class="text-slate-600 text-lg">F5 provides controlled routing behavior and enables planned maintenance and failover patterns aligned with enterprise practices.</div>
                  </li>
                </ul>
              </div>
            </section>

            <!-- Section 3 -->
            <section>
              <div class="flex items-center gap-4 mb-8">
                <div class="w-10 h-10 rounded-full bg-accent/10 flex items-center justify-center text-accent font-bold text-xl">3</div>
                <h2 class="text-3xl font-bold text-slate-900 tracking-tighter">DNS and Endpoint Strategy</h2>
              </div>

              <div class="border-l-2 border-accent/20 pl-6 mb-10">
                <h3 class="text-xl font-bold text-slate-900 mb-4">3.1 Endpoint Naming Convention</h3>
                <p class="text-slate-600 leading-relaxed mb-6 text-lg">A consistent DNS strategy is used to clearly distinguish environments and reduce routing ambiguity. Dedicated hostnames are utilized per environment, e.g.,</p>
                <div class="glass p-6 bg-slate-50/50">
                  <ul class="space-y-3 font-mono text-sm text-slate-700">
                    <li class="flex items-center gap-3"><div class="w-1.5 h-1.5 rounded-full bg-slate-400"></div><code>api-dev.&lt;domain&gt;</code> / <code>api-tst.&lt;domain&gt;</code> / <code>api-stg.&lt;domain&gt;</code></li>
                    <li class="flex items-center gap-3"><div class="w-1.5 h-1.5 rounded-full bg-slate-400"></div><code>api.&lt;domain&gt;</code> <span class="text-slate-500 font-sans text-xs uppercase tracking-widest">(PRD)</span></li>
                    <li class="flex items-center gap-3"><div class="w-1.5 h-1.5 rounded-full bg-slate-400"></div><code>api-dr.&lt;domain&gt;</code> <span class="text-slate-500 font-sans text-xs uppercase tracking-widest">(DR)</span></li>
                  </ul>
                </div>
                <p class="text-slate-600 leading-relaxed mt-6 text-lg">This pattern supports clear separation of concerns, environment isolation, and easier automation.</p>
              </div>

              <div class="border-l-2 border-accent/20 pl-6 mb-10">
                <h3 class="text-xl font-bold text-slate-900 mb-4">3.2 DNS Ownership and Change Control</h3>
                <p class="text-slate-600 leading-relaxed mb-6 text-lg">DNS is treated as a controlled enterprise asset:</p>
                <ul class="space-y-4">
                  <li class="flex gap-3">
                    <div class="mt-1.5 text-slate-400 flex-shrink-0"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="9 18 15 12 9 6"></polyline></svg></div>
                    <div class="text-slate-600 text-lg">DNS entries are managed via defined change processes with audit trails.</div>
                  </li>
                  <li class="flex gap-3">
                    <div class="mt-1.5 text-slate-400 flex-shrink-0"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="9 18 15 12 9 6"></polyline></svg></div>
                    <div class="text-slate-600 text-lg">Endpoint naming and cutovers are performed according to release governance and DR procedures.</div>
                  </li>
                </ul>
              </div>

              <div class="border-l-2 border-accent/20 pl-6">
                <h3 class="text-xl font-bold text-slate-900 mb-4">3.3 Routing Independence from DNS (Where Applicable)</h3>
                <p class="text-slate-600 leading-relaxed mb-6 text-lg">While DNS provides environment identity, routing decisions remain governed at the ingress layer:</p>
                <ul class="space-y-4">
                  <li class="flex gap-3">
                    <div class="mt-1.5 text-slate-400 flex-shrink-0"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="9 18 15 12 9 6"></polyline></svg></div>
                    <div class="text-slate-600 text-lg">DNS resolves to controlled entry points, and F5 applies policy-based steering to the correct runtime targets based on approved routing rules.</div>
                  </li>
                </ul>
              </div>
            </section>

            <!-- Section 4 -->
            <section>
              <div class="flex items-center gap-4 mb-8">
                <div class="w-10 h-10 rounded-full bg-accent/10 flex items-center justify-center text-accent font-bold text-xl">4</div>
                <h2 class="text-3xl font-bold text-slate-900 tracking-tighter">Certificates & TLS Termination</h2>
              </div>

              <div class="border-l-2 border-accent/20 pl-6 mb-10">
                <h3 class="text-xl font-bold text-slate-900 mb-4">4.1 TLS Strategy</h3>
                <p class="text-slate-600 leading-relaxed mb-6 text-lg">TLS is implemented to satisfy security posture, compliance requirements, and operational simplicity:</p>
                <ul class="space-y-4">
                  <li class="flex gap-3">
                    <div class="mt-1.5 text-slate-400 flex-shrink-0"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="9 18 15 12 9 6"></polyline></svg></div>
                    <div class="text-slate-600 text-lg">TLS is enforced for all external-facing endpoints.</div>
                  </li>
                  <li class="flex gap-3">
                    <div class="mt-1.5 text-slate-400 flex-shrink-0"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="9 18 15 12 9 6"></polyline></svg></div>
                    <div class="text-slate-600 text-lg">Mutual TLS (mTLS) can be applied for sensitive internal integrations where required by policy.</div>
                  </li>
                </ul>
              </div>

              <div class="border-l-2 border-accent/20 pl-6 mb-10">
                <h3 class="text-xl font-bold text-slate-900 mb-4">4.2 Termination Options and Standard Pattern</h3>
                <p class="text-slate-600 leading-relaxed mb-6 text-lg">A consistent TLS posture is maintained across runtime planes:</p>
                <ul class="space-y-4">
                  <li class="flex gap-3">
                    <div class="mt-1.5 text-slate-400 flex-shrink-0"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="9 18 15 12 9 6"></polyline></svg></div>
                    <div class="text-slate-600 text-lg">Primary termination at the enterprise ingress layer (F5) is typically preferred for centralized certificate lifecycle management and uniform policy enforcement.</div>
                  </li>
                  <li class="flex gap-3">
                    <div class="mt-1.5 text-slate-400 flex-shrink-0"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="9 18 15 12 9 6"></polyline></svg></div>
                    <div class="text-slate-600 text-lg">Where end-to-end encryption is required, TLS can be re-established from F5 to the runtime targets, preserving encryption across segments.</div>
                  </li>
                </ul>
              </div>

              <div class="border-l-2 border-accent/20 pl-6 mb-10">
                <h3 class="text-xl font-bold text-slate-900 mb-4">4.3 Certificate Lifecycle Management</h3>
                <p class="text-slate-600 leading-relaxed mb-6 text-lg">Certificate issuance, rotation, and expiry governance are standardized:</p>
                <ul class="space-y-4">
                  <li class="flex gap-3">
                    <div class="mt-1.5 text-slate-400 flex-shrink-0"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="9 18 15 12 9 6"></polyline></svg></div>
                    <div class="text-slate-600 text-lg">Certificates follow enterprise standards for key strength, validity, and renewal cadence.</div>
                  </li>
                  <li class="flex gap-3">
                    <div class="mt-1.5 text-slate-400 flex-shrink-0"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="9 18 15 12 9 6"></polyline></svg></div>
                    <div class="text-slate-600 text-lg">Rotation procedures are documented and tested to avoid service disruption.</div>
                  </li>
                </ul>
              </div>

              <div class="border-l-2 border-accent/20 pl-6">
                <h3 class="text-xl font-bold text-slate-900 mb-4">4.4 Security Controls at the Edge</h3>
                <p class="text-slate-600 leading-relaxed mb-6 text-lg">At ingress, the architecture supports consistent application of:</p>
                <ul class="space-y-4">
                  <li class="flex gap-3">
                    <div class="mt-1.5 text-slate-400 flex-shrink-0"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="9 18 15 12 9 6"></polyline></svg></div>
                    <div class="text-slate-600 text-lg">TLS policy enforcement</div>
                  </li>
                  <li class="flex gap-3">
                    <div class="mt-1.5 text-slate-400 flex-shrink-0"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="9 18 15 12 9 6"></polyline></svg></div>
                    <div class="text-slate-600 text-lg">Request filtering and routing controls</div>
                  </li>
                  <li class="flex gap-3">
                    <div class="mt-1.5 text-slate-400 flex-shrink-0"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="9 18 15 12 9 6"></polyline></svg></div>
                    <div class="text-slate-600 text-lg">Standard headers and security hardening patterns</div>
                  </li>
                  <li class="flex gap-3">
                    <div class="mt-1.5 text-slate-400 flex-shrink-0"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="9 18 15 12 9 6"></polyline></svg></div>
                    <div class="text-slate-600 text-lg">Optional protections aligned to enterprise security tooling and posture</div>
                  </li>
                </ul>
              </div>
            </section>

